    <Grid Background="#FFFDF8FF">
        <Label Content="" HorizontalAlignment="Left" Height="363" Margin="51,33,0,0" VerticalAlignment="Top" Width="690" Background="#FFB6E6D8"/>

        <Label Content="Nombre del proveedor:" HorizontalAlignment="Left" Margin="138,167,0,0" VerticalAlignment="Top" Width="231" Background="{x:Null}" FontFamily="Yu Gothic UI Semibold" HorizontalContentAlignment="Right" Foreground="White" FontSize="20"/>
