<Window x:Class="proyecto_tienda.FORMULARIOS.buscarproveedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_tienda.FORMULARIOS"
        mc:Ignorable="d"
        Title="buscarproveedor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="187*"/>
            <RowDefinition Height="247*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtfiltro" HorizontalAlignment="Left" Margin="112,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="341" Height="21" TextChanged="txtfiltro_TextChanged"/>
        <Label Content="Filtrar:" HorizontalAlignment="Left" Margin="51,53,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgvfiltro" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,116,0,0" Grid.RowSpan="2" SelectedCellsChanged="dgvfiltro_SelectedCellsChanged"/>
        <Button x:Name="btnaceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="731,38,0,0" VerticalAlignment="Top" Click="btnaceptar_Click" />
        <Button x:Name="btncancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="729,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.228,0.583" Click="btncancelar_Click"/>

    </Grid>
</Window>
